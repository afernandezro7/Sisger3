<form action="{{ path('contenedor_create') }}" role="form" id="newContenedor" method="post" {{ form_enctype(form) }}
      class="form-horizontal">

    <div class="form-group">
        <div class="col-sm-2"><label class="control-label"><span style="color: red"
                                                                 class="required">*&nbsp;</span>Mes</label></div>
        <div class="col-sm-10">
            <div class="input-group date date-picker" data-date-format="mm/yyyy" data-date-viewmode="years"
                 data-date-minviewmode="months" {# data-date-start-date="+0d" #}>
                <input id="mes" name="mes" type="text" class="form-control">
												<span class="input-group-btn">
												<button class="btn default" type="button"><i class="fa fa-calendar"></i>
                                                </button>
												</span>
            </div>

        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2"><label class="control-label">C&oacute;digo</label>
        </div>
        <div class="col-sm-10">

            {{ form_widget(form.codigo, {'attr' : {'class' : 'form-control' }}
            ) }}
            {{ form_errors(form.codigo) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2"><label class="control-label"><span style="color: red"
                                                                 class="required">*&nbsp;</span>Tipo</label></div>
        <div class="col-sm-10">

            {{ form_widget(form.tipo, {'attr' : {'class' : 'form-control select2me' ,'style':'width: 100%;', }}
            ) }}
            {{ form_errors(form.tipo) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2"><label class="control-label">Sello</label></div>
        <div class="col-sm-10">

            {{ form_widget(form.sello, {'attr' : {'class' : 'form-control' }}
            ) }}
            {{ form_errors(form.sello) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-2"><label class="control-label">Volumen</label></div>
        <div class="col-md-10">

            {{ form_widget(form.volumenM3, {'attr' : {'class' : 'form-control' }}
            ) }}
            {{ form_errors(form.volumenM3) }}

        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-2"><label class="control-label">Peso Max.</label></div>
        <div class="col-md-10">

            {{ form_widget(form.maxPesoKg, {'attr' : {'class' : 'form-control' }}
            ) }}
            {{ form_errors(form.maxPesoKg) }}

        </div>
    </div>


    {{ form_rest(form) }}
</form>
