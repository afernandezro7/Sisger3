<form action="{{ path('contenedor_update_manifiesto', { 'id': entity.id }) }}" role="form" id="editManifiesto"
      method="post" {{ form_enctype(edit_form) }}
      class="form-horizontal">

    <div class="form-group">
        <div class="col-sm-2"><label><span style="color: red"
                                           class="required">*&nbsp;</span>Motonave</label>
        </div>
        <div class="col-sm-10">

            {{ form_widget(edit_form.motonave, {'attr' : {'class' : 'form-control' }}
            ) }}
            {{ form_errors(edit_form.motonave) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2"><label><span style="color: red"
                                           class="required">*&nbsp;</span>MBL</label>
        </div>
        <div class="col-sm-10">

            {{ form_widget(edit_form.mbl, {'attr' : {'class' : 'form-control' }}
            ) }}
            {{ form_errors(edit_form.mbl) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2"><label><span style="color: red"
                                           class="required">*&nbsp;</span>Puerto de salida</label>
        </div>
        <div class="col-sm-10">

            {{ form_widget(edit_form.puertoSalida, {'attr' : {'class' : 'form-control' }}
            ) }}
            {{ form_errors(edit_form.puertoSalida) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2"><label><span style="color: red"
                                           class="required">*&nbsp;</span>Puerto de
                entrada</label>
        </div>
        <div class="col-sm-10">

            {{ form_widget(edit_form.puertoEntrada, {'attr' : {'class' : 'form-control' }}
            ) }}
            {{ form_errors(edit_form.puertoEntrada) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-2"><label><span style="color: red"
                                           class="required">*&nbsp;</span>Fecha de salida</label>
        </div>
        <div class="col-sm-10">
            <div class="input-group date date-picker" data-date-start-date="+0d" data-date-format="dd-mm-yyyy">
            {{ form_widget(edit_form.fechaSalida, {'attr' : {'class' : 'form-control' , }}
            ) }}
            <span class="input-group-btn">
												<button class="btn default" type="button"><i class="fa fa-calendar"></i>
                                                </button>
												</span>
            {{ form_errors(edit_form.fechaSalida) }}
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2"><label><span style="color: red"
                                           class="required">*&nbsp;</span>Fecha estimada de
                entrada</label></div>
        <div class="col-sm-10">
            <div class="input-group date date-picker" data-date-start-date="+0d" data-date-format="dd-mm-yyyy">
            {{ form_widget(edit_form.fechaEntrada, {'attr' : {'class' : 'form-control' , }}
            ) }}
            <span class="input-group-btn">
												<button class="btn default" type="button"><i class="fa fa-calendar"></i>
                                                </button>
												</span>
            {{ form_errors(edit_form.fechaEntrada) }}
            </div>
        </div>
    </div>

    {{ form(edit_form) }}
</form>
