	<div class="form-group">
		<div class="col-sm-2">
			<label class="control-label">
				<span style="color: red" class="required">*&nbsp;</span>Expediente</label>
		</div>
		<div class="input-icon input-icon-sm col-sm-5">
			<i style="margin-top: 5px">E-</i>
			{% if exp_id != 0 %}
				<input class="form-control form-filter input-sm" name="expediente" value="{{ exp_id }}" type="text" required="">
			{% else %}
				<input class="form-control form-filter input-sm" name="expediente" type="text" required="">
			{% endif %}
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2">
			<label class="control-label">
				<span style="color: red" class="required">*&nbsp;</span>Nombre RTTE</label>
		</div>
		<div class="col-sm-10">

			{{ form_widget(form.remitenteNombre, {'attr' : {'class' : 'form-control' }}) }}
			{{ form_errors(form.remitenteNombre) }}
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2">
			<label class="control-label">
				<span style="color: red" class="required">*&nbsp;</span>C&eacute;dula RTTE</label>
		</div>
		<div class="col-sm-10">

			{{ form_widget(form.remitenteCedula, {'attr' : {'class' : 'form-control' }}) }}
			{{ form_errors(form.remitenteCedula) }}
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-2">
			<label class="control-label">
				<span style="color: red" class="required">*&nbsp;</span>Consignado</label>
		</div>
		<div class="col-sm-10">

			{{ form_widget(form.consignado, {'attr' : {'class' : 'form-control select2me' ,'style':'width: 100%;', }}) }}
			{{ form_errors(form.consignado) }}

		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-2">
			<label class="control-label">
				<span style="color: red" class="required">*&nbsp;</span>Contenedor</label>
		</div>
		<div class="col-sm-10">

			{{ form_widget(form.contenedor, {'attr' : {'class' : 'form-control select2me' ,'style':'width: 100%;', }}) }}
			{{ form_errors(form.contenedor) }}
		</div>
	</div>
	<div class="form-group">

		<div class="col-sm-2">
			<label class="control-label">
				<span style="color: red" class="required">*&nbsp;</span>Cantidad</label>
		</div>

		<div class="col-sm-10">

			<input class="form-control" type="number" name="amount" min="1" value="1" required=""/>

		</div>

	</div>
	{{ form(form) }}
	</form>
