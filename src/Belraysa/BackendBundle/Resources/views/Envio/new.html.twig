<form action="{{ path('envio_create') }}" role="form" id="newEnvio" method="post" class="form-horizontal">
	<div class="form-group form-md-radios">
		<div class="col-sm-2"></div>
		<div class="col-sm-10">
			<div class="md-radio-inline">
				<div class="md-radio">
					<input value="RVA" type="radio" onchange="disableSelector('RVA');" id="radio6" name="estado" class="md-radiobtn" checked>
					<label for="radio6">
						<span></span>
						<span class="check"></span>
						<span class="box"></span>
						RVA
					</label>
				</div>
				<div class="md-radio">
					<input value="HBL" onchange="disableSelector('HBL');" type="radio" id="radio7" {% if flag_hbl == 'no' %} disabled="disabled" {% endif %} name="estado" class="md-radiobtn">
					<label for="radio7">
						<span></span>
						<span class="check"></span>
						<span class="box"></span>
						HBL
					</label>
				</div>

			</div>
		</div>
	</div>
