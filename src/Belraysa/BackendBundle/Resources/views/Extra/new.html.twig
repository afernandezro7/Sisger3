<form action="{{ path('extra_create') }}" role="form" id="newExtra"
      method="post" {{ form_enctype(form) }}
      class="form-horizontal">

    <div class="form-group">
        <label class="col-sm-2 control-label"><span style="color: red"
                                                    class="required">*&nbsp;</span>Importe</label>

        <div class="col-sm-10">
            <div class="input-inline">
                {{ form_widget(form.importe, {'attr' : {'class' : 'form-control', 'placeholder':'Desde' }}
                ) }}
                {{ form_errors(form.importe) }}
            </div>

        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label"><span style="color: red"
                                                    class="required">*&nbsp;</span>Concepto</label>

        <div class="col-sm-10">

            {{ form_widget(form.concepto, {'attr' : {'class' : 'form-control' }}
            ) }}
            {{ form_errors(form.concepto) }}
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label"><span style="color: red"
                                                    class="required">*&nbsp;</span>Cuenta</label>

        <div class="col-sm-10">

            {{ form_widget(form.banking, {'attr' : {'class' : 'form-control select2','style':'width: 100%;' }}
            ) }}
            {{ form_errors(form.banking) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label"><span style="color: red"
                                                    class="required">*&nbsp;</span>Tipo</label>

        <div class="col-sm-10">
            <select class="form-control select2" style="width: 100%" name="tipo">
                <option value="Ingreso">Ingreso</option>
                <option value="Egreso">Egreso</option>
            </select>
        </div>
    </div>

    {{ form_rest(form) }}
</form>
