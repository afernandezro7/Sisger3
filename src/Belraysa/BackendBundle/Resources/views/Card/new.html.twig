<form action="{{ path('card_create') }}" id="newCard" method="post" {{ form_enctype(form_card) }}
      class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label"><span style="color: red"
                                                    class="required">*&nbsp;</span>Nombre</label>

        <div class="col-sm-10">
            {{ form_widget(form_card.name, {'attr' : {'class' : 'form-control','placeholder':'Nombre' }}) }}
            {{ form_errors(form_card.name) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label"><span style="color: red"
                                                    class="required">*&nbsp;</span>Saldo</label>

        <div class="col-sm-10">
            {{ form_widget(form_card.balance, {'attr' : {'class' : 'form-control','placeholder':'Saldo' }}) }}
            {{ form_errors(form_card.balance) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label"><span style="color: red"
                                                    class="required">*&nbsp;</span>Espacios</label>

        <div class="col-sm-10">
            {{ form_widget(form_card.workspaces, {'attr' : {'class' : 'form-control select2me', 'style': 'width:100%' }}) }}
            {{ form_errors(form_card.workspaces) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">M&eacute;todos de pago</label>

        <div class="col-sm-10">
            {{ form_widget(form_card.metodosPago, {'attr' : {'class' : 'form-control select2me', 'style': 'width:100%' }}) }}
            {{ form_errors(form_card.metodosPago) }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-4 simple-checkbox">
            {{ form_widget(form_card.enabled, {'attr':{'class':'minimal' }}) }}
            {{ form_errors(form_card.enabled) }}
            <label for="item-enabled">Activo</label>
        </div>
    </div>
    {{ form_rest(form_card) }}
    <!-- /.box-footer -->
</form>
