<form id="edit" action="{{ path('card_update', { 'id': entity.id }) }}" method="post"
      class="form-horizontal" {{ form_enctype(edit_form) }}>
    <div class="form-group">
        <div class="col-sm-8">
            <div class="col-sm-12"><i class="fa fa-key fa-fw"></i> Id: <label
                        id="item-id">{{ entity.getId() }}</label>
            </div>
            <input id="hidden-item-id" type="hidden" name="Id" value="-1">

            <div class="col-sm-12"><i class="fa fa-calendar fa-fw"></i> Fecha de creaci&oacute;n: <label
                        id="item-created">{{ entity.createdAt()|date('d/m/Y H:i') }}</label></div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2"><span style="color: red" class="required">*&nbsp;</span>Nombre</label>

        <div class="col-sm-10">
            {{ form_widget(edit_form.name, {'attr' : {'class' : 'form-control' }}
            ) }}
            {{ form_errors(edit_form.name) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label"><span style="color: red"
                                                    class="required">*&nbsp;</span>Espacios</label>

        <div class="col-sm-10">
            {{ form_widget(edit_form.workspaces, {'attr' : {'class' : 'form-control', 'style': 'width:100%' }}) }}
            {{ form_errors(edit_form.workspaces) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">M&eacute;todos de pago</label>

        <div class="col-sm-10">
            {{ form_widget(edit_form.metodosPago, {'attr' : {'class' : 'form-control', 'style': 'width:100%' }}) }}
            {{ form_errors(edit_form.metodosPago) }}
        </div>
    </div>

    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-4 simple-checkbox">
            {{ form_widget(edit_form.enabled, {'attr':{'class':'minimal' }}) }}
            {{ form_errors(edit_form.enabled) }}
            <label for="item-enabled">Activo</label>
        </div>
    </div>
    {{ form(edit_form) }}
</form>
<script>
    $('#belraysa_backendbundle_card_edit_workspaces').select2({
        placeholder: "Seleccione",
        allowClear: true
    });
    $('#belraysa_backendbundle_card_edit_metodosPago').select2({
        placeholder: "Seleccione",
        allowClear: true
    });

</script>
