<form action="{{ path('mercancia_create') }}" role="form" id="newMercancia" method="post" {{ form_enctype(form) }}
      class="form-horizontal" onsubmit="return check();">

    <input id="bultoid2" class="bulto_id" type="hidden" name="bulto" value="{{ concepto.id }}">
    <input id="concepto_id" type="hidden" name="concepto_id" value="{{ concepto.id }}">

    <div class="form-group">
        <div class="col-sm-2"><label class="control-label"><span style="color: red"
                                                                 class="required">*&nbsp;</span>Descripci&oacute;n</label>
        </div>
        <div class="col-sm-10">

            {{ form_widget(form.descripcion, {'attr' : {'class' : 'form-control' }}
            ) }}
            {{ form_errors(form.descripcion) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2"><label class="control-label">Cantidad</label></div>
        <div class="col-sm-10">

            {{ form_widget(form.cantidad, {'attr' : {'class' : 'form-control', 'disabled':'disabled'  }}
            ) }}
            {{ form_errors(form.cantidad) }}

        </div>
    </div>
    <div class="form-group" id="relacion">
        <div class="col-sm-2"><label class="control-label"><span style="color: red"
                                                                 class="required">*&nbsp;</span>Relacionada</label></div>
        <div class="col-sm-10">

            <select id="miRelacionada" name="miRelacionada"
                    class="form-control select2me"
                    style="width: 100%">
                {% for mercancia in mercancias.getRelacionables(null, concepto.id) %}
                    <option value="{{ mercancia.id }}">{{ mercancia.getDescripcion() }} - Bulto
                        # {{ mercancia.getBulto().getIndice() }}
                    </option>
                {% endfor %}

            </select>

        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2"><label class="control-label"><span style="color: red"
                                                                 class="required">*&nbsp;</span>Arancel</label></div>
        <div class="col-sm-10" id="arancel">

            {{ form_widget(form.arancel, {'attr' : {'class' : 'form-control select2me', 'style':'width:100%', 'disabled':'disabled' }}
            ) }}
            {{ form_errors(form.arancel) }}

        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2"><label class="control-label">Vol&uacute;men</label></div>
        <div class="col-sm-7">
            <input id="volumen_create2" type="text" name="volumen" class="form-control">
        </div>
        <div class="col-sm-2">
            <select name="umaltura" class="form-control select2me">
                <option value="cm">m3</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-2"><label class="control-label">Altura</label></div>
        <div class="col-sm-7">
            <input id="altura_create2" type="text" name="altura" class="form-control">
        </div>
        <div class="col-sm-2">
            <select name="umaltura" class="form-control select2me">
                <option value="cm">cm</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-2"><label class="control-label">Ancho</label></div>
        <div class="col-sm-7">
            <input id="ancho_create2" type="text" name="ancho" class="form-control">
        </div>
        <div class="col-sm-2">
            <select name="umancho" class="form-control select2me">
                <option value="cm">cm</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-2"><label class="control-label">Profundidad</label>
        </div>
        <div class="col-sm-7">
            <input id="profundidad_create2" type="text" name="profundidad" class="form-control">
        </div>
        <div class="col-sm-2">
            <select name="umprofundidad" class="form-control select2me">
                <option value="cm">cm</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-2"><label class="control-label"><span style="color: red"
                                                                 class="required">*&nbsp;</span>Peso</label></div>
        <div class="col-sm-7">
            <input type="text" required name="peso" class="form-control">
        </div>
        <div class="col-sm-2">
            <select name="umpeso" class="form-control select2me">
                <option value="kgs">Kgs</option>
                <option value="lbs">Lbs</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2"><label class="control-label">Tarifa Mar&iacute;tima</label></div>
        <div class="col-sm-10">

            {{ form_widget(form.tarifa, {'attr' : {'class' : 'form-control select2me', 'style':'width:100%' }}
            ) }}
            {{ form_errors(form.tarifa) }}

        </div>
    </div>
    {{ form(form) }}
</form>
<script>
    function check(){
        if($('#volumen_create2').val() == '' && ($('#ancho_create2').val() == '' || $('#altura_create2').val() == '' || $('#profundidad_create2').val() == '')){
            alert('Debe llenar el campo volumen o los campos altura, ancho y profundidad');
            return false;
        }
    }
</script>